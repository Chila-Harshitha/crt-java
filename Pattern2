import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner s=new Scanner(System.in);
        int m;
        m=s.nextInt();
        for(int i=1;i<=m;i++){
            for(int j=1;j<=m;j++){
                if((i==j)||((i+j)==(m+1)))
                    System.out.print("*");
                else
                    System.out.print(" ");
            }
            System.out.println();
        }
    }
}
