import java.util.*;
class SortArray{
public static void main(String args[]){
Scanner s=new Scanner(System.in);
int n=s.nextInt();
int a[]=new int[n];
for(int i=0;i<n;i++)
{
a[i]=s.nextInt();
}
Arrays.sort(a);
int mid;
if(n%2==0)
mid=n/2;
else
mid=n/2+1;
int l=0,m=n-1;
for(int i=0;i<mid;i++){
System.out.print(a[m]+" ");
m--;
}
for(int i=0;i<(n-mid);i++){
System.out.print(a[l]+" ");
l++;
}
}
}
======================================================
6
23 44 11 75 48 34
75 48 44 11 23 34
